<Window x:Class="Solsystem.MainWindow" x:Name="spaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Solsystem"
        mc:Ignorable="d"
        SizeToContent="Manual"
        WindowState="Maximized"
        Title="MainWindow">
    <Grid Name="spaceGrid" Background="Black">
        <Canvas Margin="0,0,0,0" Name="orbitFrame" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Canvas Margin="0,0,0,0" Name="spaceFrame"/>
        <Canvas Margin="0,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Visibility="Collapsed"  Background="#FF222222" Name="objectFrame"/>
        <Canvas Margin="0,0,0,0" Name="labelFrame" Visibility="Visible"/>
        <Button x:Name="Toggle_Labels" Content="Toggle Labels" Grid.Column="1" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="86" Click="Labels_Click" Background="#FF222222" Foreground="White"/>
        <Button x:Name="Toggle_Orbits" Content="Toggle Orbits" Grid.Column="1" HorizontalAlignment="Right" Margin="0,36,10,0" VerticalAlignment="Top" Width="86" Click="Orbits_Click" Background="#FF222222" Foreground="White"/>
    </Grid>
</Window>
